{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Mintlify",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://mintlify.com"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#2AB673",
    "light": "#55D799",
    "dark": "#117866",
    "anchors": {
      "from": "#117866",
      "to": "#2AB673"
    }
  },
  "api": {
    "auth": {
      "method": "bearer"
    }
  },
  "topbarLinks": [
    {
      "name": "Login",
      "url": "https://mintlify.com/login"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "https://mintlify.com/start"
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true
  },
  "tabs": [
    {
      "name": "Writing Content",
      "url": "content"
    },
    {
      "name": "API References",
      "url": "api-playground"
    }
  ],
  "navigation": [
    {
      "group": "Getting Started",
      "pages": ["introduction", "quickstart", "development"]
    },
    {
      "group": "Styling",
      "pages": [
        "settings/global",
        "settings/navigation",
        "settings/custom-styling",
        "settings/ctas-footers"
      ]
    },
    {
      "group": "Configurations",
      "pages": [
        {
          "group": "Custom Domain",
          "pages": [
            "settings/custom-domain/subdomain",
            "settings/custom-domain/subdirectory"
          ]
        },
        "settings/page",
        "settings/seo",
        "settings/versioning",
        "settings/add-members"
      ]
    },
    {
      "group": "Writing Content",
      "pages": [
        "content/component-library",
        "content/text",
        "content/image-embeds",
        "content/list-table",
        "content/code",
        "content/reusable-snippets"
      ],
      "icon": "pencil"
    },
    {
      "group": "API Playground",
      "pages": [
        "api-playground/overview",
        "api-playground/configuration",
        "api-playground/authentication",
        "api-playground/openapi"
      ]
    },
    {
      "group": "Analytics",
      "pages": [
        "analytics/supported-integrations",
        {
          "group": "Set Up Analytics",
          "pages": [
            "analytics/set-up/amplitude",
            "analytics/set-up/clearbit",
            "analytics/set-up/fathom",
            "analytics/set-up/google-analytics",
            "analytics/set-up/google-tag-manager",
            "analytics/set-up/hotjar",
            "analytics/set-up/koala",
            "analytics/set-up/logrocket",
            "analytics/set-up/mixpanel",
            "analytics/set-up/pirsch",
            "analytics/set-up/plausible",
            "analytics/set-up/posthog"
          ]
        }
      ]
    },
    {
      "group": "Organization Components",
      "pages": [
        "content/components/accordion",
        "content/components/accordion-group",
        "content/components/card",
        "content/components/card-group",
        "content/components/tabs"
      ]
    },
    {
      "group": "Context Components",
      "pages": [
        "content/components/callouts",
        "content/components/code",
        "content/components/code-group",
        "content/components/frame",
        "content/components/tooltip"
      ]
    },
    {
      "group": "API Components",
      "pages": [
        "api-playground/components/api/param",
        "api-playground/components/api/response",
        "api-playground/components/api/expandable",
        "api-playground/components/api/sticky-examples"
      ]
    }
  ],
  "footerSocials": {
    "github": "https://github.com/mintlify",
    "slack": "https://join.slack.com/t/mintlify-users/shared_invite/zt-1xfzz6x35-f4o4WCYfpvLhSj3O7WAOMA",
    "twitter": "https://twitter.com/mintlify"
  }
}
